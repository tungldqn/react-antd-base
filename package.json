{
  "name": "react-app-base",
  "version": "1.0.0",
  "description": "React App Base Project",
  "author": "tungldqn@gmail.com",
  "private": true,
  "scripts": {
    "sass:compile": "node-sass-chokidar --include-path ./src --include-path ./node_modules src/assets/scss/ -o public/css/",
    "sass:autoprefixer": "postcss public/css/*.css --use autoprefixer -d public/css",
    "build:css": "npm-run-all sass:*",
    "build:js": "react-scripts build",
    "watch:css": "chokidar \"src/assets/scss/**/*\" -c \"npm run build:css\"",
    "watch:js": "react-scripts start",
    "start": "npm-run-all -p build:css watch:*",
    "build": "npm-run-all -p build:*",
    "test": "react-scripts test"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    "> 0.25%",
    "ie >= 11",
    "not op_mini all",
    "not dead"
  ],
  "dependencies": {
    "axios": "0.19.0",
    "bootstrap": "4.3.1",
    "classnames": "2.2.6",
    "lodash": "4.17.19",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-dom": "16.8.6",
    "react-redux": "7.0.3",
    "react-router-dom": "^5.1.2",
    "react-scripts": "^3.3.1",
    "react-select": "3.0.4",
    "reactstrap": "8.0.0",
    "redux": "4.0.1",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "chokidar-cli": "^2.1.0",
    "node-sass": "^4.13.1",
    "node-sass-chokidar": "^1.4.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.0"
  }
}
